---
import "../styles/global.css";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/icon.svg" />
    <meta name="generator" content={Astro.generator} />
    <!-- Meta Descripción -->
    <meta
      name="description"
      content="KAUS STUDIO: Expertos en soluciones personalizadas, renders de alta calidad y diseño innovador. Transformamos tus ideas en proyectos exitosos con tecnología y creatividad."
    />

    <!-- Palabras clave (Keywords) -->
    <meta
      name="keywords"
      content="KAUS STUDIO, renders, diseño innovador, soluciones personalizadas, desarrollo web, diseño gráfico, tecnología, creatividad, proyectos exitosos"
    />

    <!-- Meta Author -->
    <meta name="author" content="KAUS STUDIO" />

    <!-- Open Graph (para redes sociales) -->
    <meta
      property="og:title"
      content="KAUS STUDIO | Soluciones Innovadoras, Renders y Diseño de Alto Impacto"
    />
    <meta
      property="og:description"
      content="KAUS STUDIO: Expertos en soluciones personalizadas, renders de alta calidad y diseño innovador. Transformamos tus ideas en proyectos exitosos con tecnología y creatividad."
    />
    <meta
      property="og:image"
      content="https://www.kausstudio.vercel.app/kausstudion.png"
    />
    <meta property="og:url" content="https://www.kausstudio.vercel.app" />

    <!-- Twitter Card (para Twitter) -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="KAUS STUDIO | Soluciones Innovadoras, Renders y Diseño de Alto Impacto"
    />
    <meta
      name="twitter:description"
      content="KAUS STUDIO: Expertos en soluciones personalizadas, renders de alta calidad y diseño innovador. Transformamos tus ideas en proyectos exitosos con tecnología y creatividad."
    />
    <meta
      name="twitter:image"
      content="https://www.kausstudio.vercel.app/kausstudion.png"
    />

    <!-- Canonical URL (para evitar contenido duplicado) -->
    <link rel="canonical" href="https://www.kausstudio.vercel.app" />

    <!-- Meta Robots (indexación y seguimiento) -->
    <meta name="robots" content="index, follow" />

    <!-- Meta Viewport (para diseño responsive) -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Meta Charset (codificación de caracteres) -->
    <meta charset="UTF-8" />

    <!-- Meta Language (idioma principal del sitio) -->
    <meta http-equiv="Content-Language" content="es" />

